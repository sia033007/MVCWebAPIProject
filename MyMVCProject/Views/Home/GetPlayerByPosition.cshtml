@model IEnumerable<Player>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Players";
}
<div class="container" style="overflow:scroll">
    <div class="row justify-content-center">
        <div class="col">
            <table class="table table-striped table-bordered text-center mt-5">
                <thead>
                    <tr class="bg-secondary text-white">
                        <th>Id</th>
                        <th>Name</th>
                        <th>Position</th>
                        <th>Nationality</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var player in Model)
            {
                <tr>
                    <td class="bg-dark text-white">@player.Id</td>
                    <td class="bg-warning">@player.Name</td>
                    <td class="bg-primary">@player.Position</td>
                    <td class="bg-info">@player.Nationality</td>
                </tr>
            }
                </tbody>
            </table>
        </div>
    </div>
</div>
